<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/station_fuel_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_base"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

    <TextView
        android:id="@+id/station_fuel_tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/station_city"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

    <TextView
        android:id="@+id/station_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/map_kilometer"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/station_tabs_fuels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/station_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/station_rv_fuel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>